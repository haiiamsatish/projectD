<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5sp"
    android:focusableInTouchMode="true"
    tools:context="com.yantramicrosystems.www.projectd.settings2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvLegend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:text="@string/legend"
            android:textAlignment="textEnd"
            android:textColor="@color/md_blue_A700"


            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:gravity="center"
            android:text="Select Guage"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spSelectGuage"
            style="@style/spinner_style"
            android:layout_width="match_parent"
            android:layout_height="30sp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="5sp"
            android:gravity="center"
            android:text="Select Parameter"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spSelectParameter"
            style="@style/spinner_style"
            android:layout_width="match_parent"
            android:layout_height="30sp" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5sp"
            android:weightSum="100"
            >

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="Label"
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text=":"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etLabel"
                android:layout_width="0sp"
                android:layout_weight="65"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/md_grey_100"
                />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="Range"
                android:textSize="16sp"
                android:textStyle="bold"

                />

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text=":"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etRangeMin"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:backgroundTint="@color/md_grey_100"
                android:hint="Min Value"
                android:inputType="number"
                android:text="0"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="to" />

            <EditText
                android:id="@+id/etRangeMax"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:backgroundTint="@color/md_grey_100"
                android:hint="Max Value"
                android:inputType="number"
                android:text="0"
                android:textAlignment="center"
                android:textSize="16sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="Alarm Range"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text=":"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etAlarmMin"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:backgroundTint="@color/md_grey_100"
                android:hint="Min Value"
                android:inputType="number"
                android:text="0"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="to" />

            <EditText
                android:id="@+id/etAlarmMax"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:backgroundTint="@color/md_grey_100"
                android:hint="Max Value"
                android:inputType="number"
                android:text="0"
                android:textAlignment="center"
                android:textSize="16sp" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:gravity="center_horizontal"
            android:text="Unit"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_weight="48"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Default Unit"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etDefaultUnit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/md_grey_100"
                    android:editable="false"
                    android:gravity="center_horizontal"
                    android:textSize="14sp" />


            </LinearLayout>

            <View
                android:layout_width="0sp"
                android:layout_height="1sp"
                android:layout_weight="4" />

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_weight="48"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Required Unit"
                    android:textSize="14sp" />

                <EditText

                    android:id="@+id/etRequiredUnit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/md_grey_100"
                    android:gravity="center_horizontal"
                    android:hint="Enter Manually"
                    android:textSize="14sp"
                    android:text="NULL"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:text="Addition Factor"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text=":"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etAdditionFactor"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:backgroundTint="@color/md_grey_100"
                android:hint="Eg: 1.2 or -1.2"
                android:text="0"
                android:textSize="14sp"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:text="Multiplication Factor"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text=":"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etMultiplicationFactor"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="65"
                android:backgroundTint="@color/md_grey_100"
                android:hint="Eg: 2 or 0.2"
                android:text="1"
                android:textSize="14sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btSaveGuage"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5sp"
            android:text="Save Guage"
            android:textColor="@color/md_grey_400" />


    </LinearLayout>


</LinearLayout>
